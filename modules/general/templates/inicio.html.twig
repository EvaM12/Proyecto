{{ attach_library('general/inicio')}}

<p class="h1 text-center mb-3 mt-4">Next Features</p>
<div class="owl-carousel owl-theme container mb-4">
	{% for partido in partidos %}
		<div class="item partido text-center m-2 p-2 lh-1">
			<p class="comp fw-semibold p-2 h5">{{partido.competicion}}</p>
			<section class="d-flex flex-row m-auto align-items-center justify-items-center">
				<article class="local col col-5">
					<img
					src="{{partido.logoLocal}}" alt="local" class="m-auto p-2">
					<!-- poner selector en el css con important-->
					<p class="text-uppercase fw-bold p-2 h3">{{partido.local}}</p>
				</article>
				<p class="col col-2">vs</p>
				<article class="visitante col col-5">
					<img
					src="{{partido.logoVisitante}}" alt="visitante" class="m-auto p-2">
					<!-- alinear veritcalemnte, lh-1-->
					<p class="text-uppercase fw-bold p-2 h3">{{partido.visitante}}</p>
				</article>
			</section>
			<p class="estadio ps-2 pe-2">{{partido.estadio ~ ' (' ~ partido.ciudad ~ ', ' ~ partido.pais ~ ')'}}</p>
			<section class="d-flex flex-row m-auto text-center align-items-center justify-items-center">
				<p class="fecha col col-6">{{partido.dia ~ ' ' ~ partido.mes ~ ' ' ~ partido.anio ~ ' ' ~ partido.hora }}</p>
				<div class="entradas text-end col-2 m-0 p-0 d-grid align-items-center m-auto">
                        <a href="http://localhost/AllTickets/partido/{{partido.id}}" data-testid="event-list-link" class="enlace d-inine-block position-relative">
                            <span>Entradas</span>
                            <svg class="flecha flex-shrink-0 d-inline text-nowrap text-center" viewBox="0 0 24 24" width="1em" height="1em"
                                aria-hidden="true" focusable="false">
                                <path d="M3.47 8.26 4.53 7.2 12 14.67l7.47-7.47 1.06 1.06L12 16.8 3.47 8.26Z">
                                </path>
                            </svg>
                        </a>
                    </div>
			</section>
		</div>
	{% endfor %}
</div>

<section class="nosotros position-relative mt-4 mb-4">
	<div class="izquierda">
		<p style="height: 250px;">jfrleoremvroemvoemovrerem</p>
	</div>
	<div class="derecha position-absolute"></div>
</section>

<section class="noticias container pb-3 pb-md-0">
	<p class="h1 mb-3 mt-4 title text-center">Latest news</p>
    {% for news in noticias %}
        {% if loop.index == 3 %}
        <div class="news1 ms-1 ms-lg-2 me-1 ms-lg-2 mb-2 position-relative">
            <a href="{{ news.enlace }}">
                <img src="{{ news.imagen }}" class="attachment-khelo_latest_xl_blog size-khelo_latest_xl_blog wp-post-image" alt="">
            </a>
            <section class="info m-0 position-absolute w-100 ps-3">
                <p class="date mt-2 mb-2">{{ news.fecha }}</p>
                <h4 class="mt-3 mb-3">
                    <a href="">{{ news.titular }}</a>
                </h4>
            </section>
        </div>
        {% endif %}
        {% if loop.index == 2 %}
        <div class="news2 ms-1 me-1 mb-3 position-relative">
            <a href="{{ news.enlace }}">
                <img src="{{ news.imagen }}" class="attachment-khelo_latest_xl_blog size-khelo_latest_xl_blog wp-post-image" alt="">
            </a>
            <section class="info m-0 position-absolute w-100 ps-3">
                <p class="date mt-2 mb-2">{{ news.fecha }}</p>
                <h4 class="mt-3 mb-3">
                    <a href="">{{ news.titular }}</a>
                </h4>
            </section>
        </div>
        {% endif %}
        {% if loop.index == 1 %}
        <div class="news3 ms-1 me-1 mb-3 position-relative">
            <a href="{{ news.enlace }}">
                <img src="{{ news.imagen }}" class="attachment-khelo_latest_xl_blog size-khelo_latest_xl_blog wp-post-image" alt="">
            </a>
            <section class="info m-0 position-absolute w-100 ps-3">
                <p class="date mt-2 mb-2">{{ news.fecha }}</p>
                <h4 class="mt-3 mb-3">
                    <a href="">{{ news.titular }}</a>
                </h4>
            </section>
        </div>
        {% endif %}
    {% endfor %}
</section>

